{
  "namespace": "hud",

  "hide_ele": {
    "type": "image",
    "texture": "textures/ui/eye",
    "size": [26, 26],
    "layer": 13
  },

  "welcomer": {
    "type": "label",
    "$welcome": "cz.welcomer",
    "text": "$welcome",
    "alpha": "@cz_anim.join",
    "anchor_from": "top",
    "layer": 12,
    "anchor_to": "top",
    "size": ["default", 40],
    "shadow": true
  },

  "hide_btn": {
    "type": "panel",
    "size": [30, 30],
    "controls": [
      { "img@hud.hide_ele": {} },
      {
        "bton@common_toggles.dark_text_toggle": {
          "$toggle_name": "czhide_toggle",
          "$button_text": " ",
          "size": [30, 30],
          "$toggle_view_binding_name": "cz_hide_toggle"
        }
      }
    ]
  },

  "zxras": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": ["100%c", "100%c"],
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      {
        "top_welcome": {
          "type": "label",
          "text": "cz.top_welcome",
          "layer": 12,
          "alpha": "@cz_anim.join",
          "shadow": true
        }
      },
      {
        "worldnames": {
          "type": "label",
          "text": "#text",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 12,
          "shadow": true,
          "alpha": "@cz_anim.join",
          "bindings": [
            {
              "binding_name": "#player_list_title",
              "binding_name_override": "#text"
            }
          ]
        }
      },
      { "welcomer@hud.welcomer": {} },
      {
        "sbackground": {
          "type": "image",
          "texture": "textures/ui/banners_dark",
          "anchor_from": "center",
          "anchor_to": "center",
          "alpha": "@cz_anim.join",
          "size": ["100%c", "100%c"],
          "offset": [0, -15],
          "layer": 1
        }
      }
    ]
  },

  "info_panel": {
    "type": "image",
    "texture": "textures/ui/Black",
    "size": ["44%", "80%"],
    "anchor_to": "top_right",
    "anchor_from": "top_right",
    "alpha": 0,
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "cz_hide_toggle",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "panel": {
          "type": "panel",
          "size": ["100%", "100%"],
          "offset": ["-3%", "2%"],
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "controls": [
            {
              "live_data": {
                "type": "label",
                "text": "#text",
                "text_alignment": "right",
                "font_scale_factor": 0.92,
                "localize": false,
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "$key": "cz:ui",
                "shadow": true,
                "controls": [
                  {
                    "data_control": {
                      "type": "panel",
                      "size": [0, 0],
                      "bindings": [
                        {
                          "binding_name": "#hud_title_text_string"
                        },
                        {
                          "binding_name": "#hud_title_text_string",
                          "binding_name_override": "#ui_data"
                        }
                      ]
                    }
                  }
                ],
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "data_control",
                    "source_property_name": "(#ui_data - $key)",
                    "target_property_name": "#text"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "auto_save": {
    "offset": ["5%", 0]
  },

  "chat_grid_item/chat_background": {
    "modifications": [
      {
        "array_name": "anims",
        "operation": "replace",
        "where": "@hud.anim_chat_bg_wait",
        "value": ["@cz_anim.cz_chat_offset"]
      }
    ]
  },
  "centered_gui_elements_at_bottom_middle/heart_rend": {
    "offset": [100, -40]
  },
  "centered_gui_elements_at_bottom_middle/armor_rend": {
    "offset": [95, -40]
  },
  "centered_gui_elements_at_bottom_middle/hunger_rend": {
    "offset": [80, -40]
  },
  "centered_gui_elements_at_bottom_middle/horse_heart_rend_1": {
    "offset": [180, -60]
  },
  "centered_gui_elements_at_bottom_middle/bubbles_rend_0": {
    "offset": [84, -50]
  },
  "centered_gui_elements_at_bottom_middle/bubbles_rend_1": {
    "offset": [84, -50]
  },

  "root_panel/chat_stack/paper_doll_padding_living_room": {
    "size": [0, 0],
    "visible": false
  },
  "root_panel/chat_stack/paper_doll_padding": {
    "size": [0, 0],
    "visible": false
  },
  "root_panel/mob_effects_renderer": {
    "offset": ["0px", "40px"]
  },

  "root_panel": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "zxras@hud.zxras": {
              "anchor_from": "bottom_middle",
              "anchor_to": "bottom_middle",
              "offset": ["0px", "-1%"]
            }
          },
          {
            "wd@hud.info_panel": {
              "anchor_to": "top_right",
              "anchor_from": "top_right"
            }
          }
        ]
      }
    ]
  }
}
